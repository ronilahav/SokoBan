<BorderPane prefHeight="582.0" prefWidth="743.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.SokobanView">
   <top>
      <MenuBar focusTraversable="false" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#loadLevel" text="Load level" />
                  <MenuItem fx:id="saveMenuItem" mnemonicParsing="false" onAction="#saveLevel" text="Save level as" />
                  <MenuItem mnemonicParsing="false" onAction="#exit" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Options">
               <items>
                  <Menu mnemonicParsing="false" text="Volume">
                     <items>
                        <MenuItem mnemonicParsing="false">
                           <graphic>
                              <Slider fx:id="soundSlider" blockIncrement="50.0" majorTickUnit="50.0" value="100.0" />
                           </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false">
                           <graphic>
                              <Slider fx:id="soundSlider1" blockIncrement="50.0" majorTickUnit="50.0" value="100.0" />
                           </graphic>
                        </MenuItem>
                     </items>
                  </Menu>
                  <MenuItem mnemonicParsing="false" onAction="#setKeys" text="Set kyes" />
               </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Score List">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#showTable" text="show score list" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem mnemonicParsing="false" text="About" />
               </items>
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#solve" text="Solve" />
               </items>
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#getHint" text="Hint" />
               </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <Pane prefHeight="520.0" prefWidth="649.0" BorderPane.alignment="CENTER">
         <children>
            <SolidCanvas fx:id="levelDisplayerC" destPathPropery="./res/Graphic Objects/dest.png" floorPathPropery="./res/Graphic Objects/floor.png" height="500.0" layoutX="14.0" layoutY="14.0" wallPathPropery="./res/Graphic Objects/wall.png" width="580.0" />
            <BoxesCanvas fx:id="boxesC" boxOnDestPathProperty="./res/Graphic Objects/boxOnDest.png" boxPathProperty="./res/Graphic Objects/box.png" height="500.0" layoutX="14.0" layoutY="14.0" width="580.0" />
            <PlayerCanvas fx:id="playerC" height="500.0" layoutX="14.0" layoutY="14.0" playerOnDestPathProperty="./res/Graphic Objects/playerOnDest.png" playerPathProperty="./res/Graphic Objects/player.png" width="580.0" />
            
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </Pane>
   </center>
   <left>
      <VBox prefHeight="533.0" prefWidth="92.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <HBox prefHeight="21.0" prefWidth="72.0" spacing="5.0">
               <children>
                  <Label text="Steps:" />
                  <Label fx:id="stepsLbl" />
               </children>
            </HBox>
            <HBox prefHeight="21.0" prefWidth="72.0" spacing="5.0">
               <children>
                  <Label text="Timer:" />
                  <Label fx:id="timerLbl" />
               </children>
            </HBox>
         </children>
      </VBox>
   </left>
   <right>
      <VBox prefHeight="520.0" prefWidth="73.0" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <HBox prefHeight="24.0" prefWidth="743.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Status:" />
            <Label fx:id="statusLbl" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
